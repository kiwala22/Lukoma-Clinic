<div class="content-heading">
   <div>New Laboratory Patient
      <small>Laboratory Patient Information</small>
   </div>
</div>

<div class="row">
  <div class="block-center mt-xl wd-xxl col-sm-8 col-centered">
    <div class="card card-dark card-flat">
      <div class="card-body">
      <%= form_with(model: @lab_patient, local: true, :html => {:"data-parsley-validate" => '', class: "mb-lg"}) do |form| %>
        <div class="form-group">
          <%= form.label :first_name, "First Name", class: "text-muted" %>
          <%= form.text_field :first_name, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :first_name) %></span>
        </div>
        <div class="form-group">
          <%= form.label :middle_name, "Middle Name", class: "text-muted" %>
          <%= form.text_field :middle_name, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :middle_name) %></span>
        </div>
        <div class="form-group">
          <%= form.label :last_name, "Last Name", class: "text-muted" %>
          <%= form.text_field :last_name, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :last_name) %></span>
        </div>
        <div class="form-group">
          <%= form.label :sex, "Sex", class: "text-muted" %>
          <%= form.select :sex, options_for_select(["Male", "Female"]), {prompt: "Select One"}, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :sex) %></span>
        </div>
        <div class="form-group">
          <%= form.label :age, "Age", class: "text-muted" %>
          <%= form.text_field :age, id: "age", class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :age) %></span>
        </div>
        <div class="form-group">
          <%= form.label :address, "Address", class: "text-muted" %>
          <%= form.text_area :address, class: "form-control", rows: 5 %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :address) %></span>
        </div>
        <div class="form-group">
          <%= form.label :phone_number, "Phone Number", class: "text-muted" %>
          <%= form.text_field :phone_number, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :phone_number) %></span>
        </div>
        <div class="form-group">
          <%= form.label :height, "Height", class: "text-muted" %>
          <%= form.text_field :height, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :height) %></span>
        </div>
        <div class="form-group">
          <%= form.label :weight, "Weight", class: "text-muted" %>
          <%= form.text_field :weight, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@lab_patient, :weight) %></span>
        </div>
        <div class="form-group"></div>
        <div class="clearfix">
          <%= form.submit 'Submit', :class=>'btn btn-info mb-2' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
