<div class="content-heading">
   <div>Doctor Dashboard
      <small data-localize="dashboard.WELCOME"></small>
   </div>
   <!-- START Language list-->
   <div class="ml-auto">
      <div class="btn-group">
         <button class="btn btn-secondary dropdown-toggle dropdown-toggle-nocaret" type="button" data-toggle="dropdown">Actions</button>
         <div class="dropdown-menu dropdown-menu-right-forced animated fadeInUpShort" role="menu"><a class="dropdown-item" href="#" data-set-lang="en">English</a><a class="dropdown-item" href="#" data-set-lang="es">Spanish</a>
         </div>
      </div>
   </div>
   <!-- END Language list-->
</div>


<div class="container-fluid">
   <div class="row">
      <div class="col-sm-4 col-centered">
         <div class="card mb-3">
            <div class="card-body">
               <div class="text-center">
                  <h3 class="mt0"><%=current_doctor.role.titleize%>. <%= current_doctor.username.titleize %></h3>
                  <p>Lukoma Clinic Limited</p>
               </div>
               <hr/>
               <ul class="listing">
               <li>
                  <em class="far fa-envelope fa-fw mr-lg"></em>
                  <%= current_doctor.email %>
               </li>
               </ul>
            </div>
         </div>
      </div>
   </div>
   
   <div class="row">
      <!-- <div class="col-sm-12"> -->
         <div class="col-sm-12 col-centered">
            <!-- START line chart-->
            <div id="panelChart3" class="card mb3 border-info">
               <div class="card-header bg-info">
                  <div class="card-title">Patients Analytics</div>
               </div>
               <div collapse="panelChart3" class="panel-wrapper">
                  <div class="card-body" >
                     <div id="patients_graph" style=" min-height: 400px; width: 100%; "></div>
                  </div>
               </div>
            </div>
            <!-- END line chart-->
         </div>
      <!-- </div> -->
   </div>
</div>