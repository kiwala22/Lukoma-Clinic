<div class="row">
  <div class="block-center mt-xl wd-xxl col-sm-8 col-centered">
    <div class="card card-dark card-flat">
      <div class="card-body">
      <%= form_with(model: patient, local: true, :html => {:"data-parsley-validate" => '', class: "mb-lg"}) do |form| %>
        <div class="form-group">
          <%= form.label :first_name, "First Name", class: "text-muted" %>
          <%= form.text_field :first_name, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :lastt_name, "Last Name", class: "text-muted" %>
          <%= form.text_field :last_name, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :sex, "Sex", class: "text-muted" %>
          <%= form.select :sex, options_for_select(["Male", "Female"]), {prompt: "Select One"}, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :date_of_birth, "Date Of Birth", class: "text-muted" %>
          <%= form.text_field :date_of_birth, id: "birth_date", class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :address, "Address", class: "text-muted" %>
          <%= form.text_area :address, class: "form-control", required: "true", rows: 5 %>
        </div>
        <div class="form-group">
          <%= form.label :phone_number, "Phone Number", class: "text-muted" %>
          <%= form.text_area :phone_number, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :height, "Height", class: "text-muted" %>
          <%= form.text_area :height, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :weight, "Weight", class: "text-muted" %>
          <%= form.text_area :weight, class: "form-control", required: "true" %>
        </div>
        <div class="form-group">
          <%= form.label :patient_history, "History", class: "text-muted" %>
          <%= form.text_area :patient_history, class: "form-control", required: "true", rows: 10 %>
        </div>
        <div class="form-group">
          <%= form.label :diagnosis, "Diagnosis", class: "text-muted" %>
          <%= form.text_area :diagnosis, class: "form-control", rows: 10 %>
        </div>
        <div class="form-group">
          <%= form.label :results, "Results", class: "text-muted" %>
          <%= form.text_area :results, class: "form-control", rows: 8 %>
        </div>
        <div class="form-group">
          <%= form.label :prescription, "Prescription", class: "text-muted" %>
          <%= form.text_area :prescription, class: "form-control", rows: 8 %>
        </div>
        <div class="form-group">
          <%= form.label :conclusion, "Conclusion", class: "text-muted" %>
          <%= form.text_area :conclusion, class: "form-control", rows: 8 %>
        </div>
        <div class="form-group"></div>
        <div class="clearfix">
          <%= form.submit 'Submit', :class=>'btn btn-info mb-2' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
