<div class="card col-md-8 block-center">
  <div class="card-body">
    <div class="d-flex align-items-center">
    <%= image_tag wicked_pdf_asset_base64('logo-1.png'), height: "50vw",class: "img-responsive" %>
    </div>
    <hr/>
    <div class="row mb-3">
      <div class="col-xl-12 col-6">
        <div class="row">
          <div class="col-lg-12" style="text-align: right;">
              <h4>Lukoma Clinic</h4>
              <address></address>Nkumba
              <br/>Katabi
              <br/>Entebe Road
          </div>
        </div>
      </div>
    </div>

    <h2>Patient Medical Record</h2>
    <hr/>
    <div class="row mb-3">
        <table class="col-xl-12 col-12 py-2" style="width: 100%;">
          <tr class="form-row col-lg-12">
            <td class="col">
              <h4><%= @patient.first_name %>, <%= @patient.last_name %></h4>
              <p><%= @patient.patient_id %></p>
              <p><%= @patient.sex %></p>
              <address></address><%= @patient.address %>
            </td>
            <td class="col">
              <p><%= @patient.date_of_birth %></p>
              <p><%= @patient.weight %> KGs</p>
              <p><%= @patient.height %> CMs</p>
              <p><%= @patient.phone_number %></p>
            </td>
          </tr>
        </table>
    </div>
    <hr/>
    <div class="container-fluid mt-2">
      <div class="">
        <div>
          <h4>Diagnosis</h4>
            <ol>
              <% @patient.diagnoses.last.diagnosis.each do |key, value| %>
                <li><%= value %></li>
              <% end %>
            </ol>
        </div>
      </div>
      <div class="">
        <div>
          <h4>Results</h4>
          <ol>
            <% @patient.results.last.results.each do |key, value| %>
              <li><%= value %></li>
            <% end %>
          </ol>
        </div>
      </div>
      <div class="">
        <div>
          <h4>Prescription</h4>
          <ol>
            <% @patient.prescriptions.last.prescription.each do |key, value| %>
              <li><%= value %></li>
            <% end %>
          </ol>
        </div>
        <h4>Additional Prescription</h4>
        <table class="table" style="border: 1px solid black; width: 100%; height: 290px; border-collapse: collapse;">
          <thead>
            <tr style="height: 37px;">
              <th style="border: 1px solid black;">Prescription</th>
              <th style="border: 1px solid black;">Additional Comments</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="border: 1px solid black;"></td>
              <td style="border: 1px solid black;"></td>
            </tr>
          </tbody>
        </table>
      </div>
      <br>
      <div class="">
        <div>
          <h4>Conclusion/Recommendations</h4>
          <p>
            <% @patient.conclusions.last.conclusion.each do |key, value| %>
              <%= value %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-lg-6"></div>
      <div class="col-lg-6 py-2">
          <div class="row mb-3">
              <div class="col-8">Served By:</div>
              <div class="col-4">
                  <div class="text-right"><strong>Dr. <%= @patient.doctor.titleize %></strong></div>
              </div>
          </div>
          <div class="row mb-3">
              <div class="col-8">Signature:</div>
              <br>
              <div class="col-4">
                  <div class="text-right">---------------------------------</div>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>
