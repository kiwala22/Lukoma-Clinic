<div class="content-heading">
  <div>Patient <%= @patient.patient_id %> Records
  <small>Patient Information</small>
  </div>
  <button class="btn btn-primary ml-auto" type="button">
      <em class="fa fa-plus-circle fa-fw mr-1"></em>New Patient</button>
</div>

<div class="card col-md-8 block-center">
  <div class="card-body">
    <div class="d-flex align-items-center">
      <h3 class="m-0">Patient Report</h3>
    </div>
    <hr/>
    <div class="row mb-3">
      <div class="col-xl-12 col-6">
        <div class="row">
          <div class="col-lg-12" style="text-align: right;">
              <h4>Lukoma Clinic</h4>
              <address></address>Nkumba
              <br/>Katabi
              <br/>Entebe Road
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-3">
         <div class="col-xl-6 col-6 py-2">
            <div class="row">
               <div class="col-lg-10">
                  <h4><%= @patient.first_name %>, <%= @patient.last_name %></h4>
                  <p><%= @patient.patient_id %></p>
                  <p><%= @patient.sex %></p>
                  <p><%= "29-01-1996" %></p>
                  <address></address><%= @patient.address %>
                </div>
            </div>
         </div>
         <div class="col-xl-6 col-12 py-2">
            <div class="clearfix">
                <p class="float-left">REPORT NO.</p>
                <p class="float-right mr-2">00004879</p>
            </div>
            <div class="clearfix">
                <p class="float-left">Date</p>
                <p class="float-right mr-2"><%= @patient.created_at.to_datetime.strftime("%b %d, %Y") %></p>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-2">
      <div class="">
        <div>
          <h4>Diagnosis</h4>
          <p>
            <%= @patient.diagnosis %>
          </p>
        </div>
      </div>
      <div class="">
        <div>
          <h4>Results</h4>
          <p>
            <%= @patient.results %>
          </p>
        </div>
      </div>
      <div class="">
        <div>
          <h4>Conclusion</h4>
          <p>
            <%= @patient.conclusion %>
          </p>
        </div>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-lg-6"></div>
      <div class="col-lg-6 py-2">
          <div class="row mb-3">
              <div class="col-8">Served By:</div>
              <div class="col-4">
                  <div class="text-right"><strong>Dr. <%= @patient.doctor.titleize %></strong></div>
              </div>
          </div>
          <div class="row mb-3">
              <div class="col-8">Signature:</div>
              <div class="col-4">
                  <div class="text-right">---------------------------------</div>
              </div>
          </div>
      </div>
    </div>
    <hr class="d-print-none" />
    <div class="clearfix">
         <button class="btn btn-success float-right" type="button" onclick="window.print();">Print Report</button>
    </div>
  </div>
</div>

              