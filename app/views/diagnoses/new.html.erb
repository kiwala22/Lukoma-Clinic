<div class="content-heading">
   <div>New Patient Diagnosis
      <small>Patient Information</small>
   </div>
</div>

<div class="row">
  <div class="block-center mt-xl wd-xxl col-sm-8 col-centered">
    <div class="card card-dark card-flat">
      <div class="card-body">
      <%= form_with(model: @diagnosis, local: true, :html => {:"data-parsley-validate" => '', class: "mb-lg"}) do |form| %>
        <div class="form-group">
          <%= form.label :patient_number, "Patient Number", class: "text-muted" %>
          <%= form.select :patient_number, options_for_select(Patient.pluck(:patient_id)), {:prompt => "Choose Patient Number...."}, class: "form-control" %>
          <span class="invalid-feedback"><%= show_errors(@diagnosis, :patient_number) %></span>
        </div>

        <div class="form-group">
          <%= form.label :diagnosis, "Diagnosis", class: "text-muted" %>
          <%= form.fields :diagnosis do |f| %>
            <%= f.text_area :value1, class: "form-control" %>
            <br>
            <%= f.text_area :value2, class: "form-control" %>
          <% end %>
        </div>
        <div class="form-group"></div>
        <div class="clearfix">
          <%= form.submit 'Submit', :class=>'btn btn-info mb-2' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
